<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E85D22"
    tools:context=".questionaire">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- First Question -->

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#8B0000"
            android:gravity="center"
            android:padding="8dp"
            android:text="Questionnaire"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView android:id="@+id/questionText1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Question 1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />
        <RadioGroup android:id="@+id/optionsGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/option1_1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Option 1"
                android:textColor="#FFFFFF"/>
            <RadioButton
                android:id="@+id/option1_2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Option 2"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <!-- Second Question -->
        <TextView android:id="@+id/questionText2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Question 2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />
        <RadioGroup android:id="@+id/optionsGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/option2_1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Option 1"
                android:textColor="#FFFFFF"/>
            <RadioButton
                android:id="@+id/option2_2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Option 2"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <!-- Third Question -->
        <TextView android:id="@+id/questionText3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Question 3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />
        <RadioGroup android:id="@+id/optionsGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/option3_1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Option 1"
                android:textColor="#FFFFFF"/>
            <RadioButton
                android:id="@+id/option3_2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Option 2"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <!-- Fourth Question -->
        <TextView android:id="@+id/questionText4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Question 4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />
        <RadioGroup android:id="@+id/optionsGroup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/option4_1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Option 1"
                android:textColor="#FFFFFF"/>
            <RadioButton
                android:id="@+id/option4_2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Option 2"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progressDrawable="@drawable/custom_progress"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/white"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0% Completed"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:backgroundTint="#8B0000"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>